<style>
    *{
    box-sizing: border-box;
    margin: 0;
}
    
.navbar {
    position: relative;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10px 20px;
    background-color: #ff9500;
    color: #fff;
}

.logo img {
    width: 40px;
} 
  
.search-bar {
    margin: 0 20px;
}
  
.search-bar input {
    width: 170px;
    padding: 8px;
    border: none;
    border-radius: 5px;
}
  
.search-bar button {
    padding: 8px 10px;
    background-color: #f6b647;
    border: none;
    border-radius: 5px;
    color: #fff;
    cursor: pointer;
}
  
.menu {
    position: relative;
}

.menu-toggle {
    display: none;
}

.menu-icon {
    cursor: pointer;
    font-size: 20px;
    
}

.menu-icon:before {
    content: "\2630"; /* Icono de menÃº (â˜°) */
}

.menu-toggle:checked + .menu-icon:before {
    content: "\2715"; /* Icono de cruz (âœ•) */
    z-index: 1;
}

.menu-overlay {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 1;
}

.menu-toggle:checked + .menu-icon + .menu-overlay + .menu-list {
    display: block;
}

.menu-toggle:checked + .menu-icon + .menu-overlay + .menu-list {
    display: block;
    transform: translate(-50%, -50%) scale(1);
    opacity: 1;
}

.menu-list {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background-color: #f6b647;
    list-style: none;
    padding: 0;
    margin: 0;
    z-index: 2;
    display: none;
    } 

.menu-list li {
    padding: 10px;
    border-bottom: 1px solid #555;
}

.menu-list li:last-child {
    border-bottom: none;
}

.menu-list li a {
    color: #fff;
    text-decoration: none;
}

